<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SEO Traffic Tools - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <!-- Header -->
    <header class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-2xl font-bold text-green-400">üöÄ SEO Traffic Tools</h1>
                    <p class="text-gray-400">Generate 1K+ clicks per day from Google search</p>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-300">Welcome, <%= user.username %></span>
                    <a href="/dashboard" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded transition">‚Üê Back to Dashboard</a>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded transition">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <!-- Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-600 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-400 text-sm">Total Clicks</p>
                        <p class="text-2xl font-bold text-green-400"><%= stats.totalClicks %></p>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-600 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-400 text-sm">Total Searches</p>
                        <p class="text-2xl font-bold text-yellow-400"><%= stats.totalSearches %></p>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
                <div class="flex items-center">
                    <div class="p-3 bg-green-600 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-400 text-sm">Success Rate</p>
                        <p class="text-2xl font-bold text-green-400"><%= stats.successRate %>%</p>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
                <div class="flex items-center">
                    <div class="p-3 bg-purple-600 rounded-full">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-400 text-sm">Active Campaigns</p>
                        <p class="text-2xl font-bold text-purple-400"><%= campaigns.filter(c => c.status === 'running').length %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Traffic Generator Form -->
        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 mb-8">
            <h2 class="text-xl font-bold mb-4 text-green-400">üéØ Generate Traffic with Manual Keywords</h2>
            <form id="trafficForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Target URL</label>
                    <input type="url" name="targetUrl" required 
                           class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                           placeholder="https://example.com/landing-page">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Keywords (One per line)</label>
                    <textarea name="keywords" required rows="4"
                              class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                              placeholder="best product 2024&#10;product review&#10;buy product online&#10;product comparison"></textarea>
                    <p class="text-xs text-gray-400 mt-1">Enter one keyword per line. Bot will crawl through ALL pages of Google search results to find your landing page.</p>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Campaign Name</label>
                        <input type="text" name="campaignName" 
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                               placeholder="My Campaign">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Clicks per Keyword</label>
                        <input type="number" name="clicksPerKeyword" value="5" min="1" max="100"
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                               title="How many clicks to generate for each keyword">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Max Pages per Keyword</label>
                        <input type="number" name="maxPages" value="10" min="1" max="20"
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Delay (ms)</label>
                        <input type="number" name="delayBetweenSearches" value="3000" min="1000" max="10000"
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    </div>
                </div>
                
                <button type="submit" class="w-full bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg font-medium transition">
                    üöÄ Start Traffic Generation
                </button>
            </form>
        </div>

        <!-- Active Campaigns -->
        <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
            <h2 class="text-xl font-bold mb-4 text-green-400">üìä Active Campaigns</h2>
            
            <% if (campaigns.length === 0) { %>
                <div class="text-center py-8 text-gray-400">
                    <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <p>No campaigns yet. Start your first traffic generation campaign above!</p>
                </div>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                        <thead>
                            <tr class="border-b border-gray-700">
                                <th class="text-left py-3 px-4">Campaign</th>
                                <th class="text-left py-3 px-4">Target URL</th>
                                <th class="text-left py-3 px-4">Status</th>
                                <th class="text-left py-3 px-4">Clicks</th>
                                <th class="text-left py-3 px-4">Searches</th>
                                <th class="text-left py-3 px-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% campaigns.forEach(campaign => { %>
                                <tr class="border-b border-gray-700">
                                    <td class="py-3 px-4">
                                        <div>
                                            <div class="font-medium"><%= campaign.name %></div>
                                            <div class="text-gray-400 text-xs">
                                                <%= new Date(campaign.startTime).toLocaleString() %>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="text-blue-400 truncate max-w-xs">
                                            <%= campaign.targetUrl %>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <% if (campaign.status === 'running') { %>
                                            <span class="px-2 py-1 bg-green-600 text-green-100 rounded-full text-xs">Running</span>
                                        <% } else if (campaign.status === 'completed') { %>
                                            <span class="px-2 py-1 bg-blue-600 text-blue-100 rounded-full text-xs">Completed</span>
                                        <% } else if (campaign.status === 'stopped') { %>
                                            <span class="px-2 py-1 bg-yellow-600 text-yellow-100 rounded-full text-xs">Stopped</span>
                                        <% } else if (campaign.status === 'error') { %>
                                            <span class="px-2 py-1 bg-red-600 text-red-100 rounded-full text-xs">Error</span>
                                        <% } %>
                                    </td>
                                    <td class="py-3 px-4 text-green-400 font-medium">
                                        <%= campaign.stats.successfulClicks %>
                                    </td>
                                    <td class="py-3 px-4 text-gray-300">
                                        <%= campaign.stats.totalSearches %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="flex space-x-2">
                                            <% if (campaign.status === 'running') { %>
                                                <button onclick="stopCampaign('<%= campaign.id %>')" 
                                                        class="px-3 py-1 bg-red-600 hover:bg-red-700 rounded text-xs transition">
                                                    Stop
                                                </button>
                                            <% } %>
                                            <button onclick="deleteCampaign('<%= campaign.id %>')" 
                                                    class="px-3 py-1 bg-gray-600 hover:bg-gray-700 rounded text-xs transition">
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Loading Modal -->
    <div id="loadingModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
        <div class="bg-gray-800 p-8 rounded-lg border border-gray-700 max-w-md w-full mx-4">
            <div class="text-center">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-green-500 mx-auto mb-4"></div>
                <h3 class="text-lg font-medium mb-2">Starting Traffic Generation</h3>
                <p class="text-gray-400">Please wait while we start crawling Google search results with your keywords...</p>
            </div>
        </div>
    </div>

    <script>
        // Traffic generation form
        document.getElementById('trafficForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            // Process keywords (split by newline and filter empty)
            const keywords = data.keywords
                .split('\n')
                .map(k => k.trim())
                .filter(k => k.length > 0);
            
            if (keywords.length === 0) {
                alert('Please enter at least one keyword');
                return;
            }
            
            // Prepare data for API
            const requestData = {
                targetUrl: data.targetUrl,
                keywords: keywords,
                campaignName: data.campaignName || 'Manual Keywords Campaign',
                delayBetweenSearches: parseInt(data.delayBetweenSearches),
                maxPages: parseInt(data.maxPages),
                clicksPerKeyword: parseInt(data.clicksPerKeyword) || 1
            };
            
            // Show loading modal
            document.getElementById('loadingModal').classList.remove('hidden');
            
            try {
                const response = await fetch('/seo-tools/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(`Traffic generation started successfully!\nKeywords: ${keywords.join(', ')}`);
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            } finally {
                document.getElementById('loadingModal').classList.add('hidden');
            }
        });
        
        // Stop campaign
        async function stopCampaign(campaignId) {
            if (!confirm('Are you sure you want to stop this campaign?')) return;
            
            try {
                const response = await fetch(`/seo-tools/stop/${campaignId}`, {
                    method: 'POST'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Campaign stopped successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
        
        // Delete campaign
        async function deleteCampaign(campaignId) {
            if (!confirm('Are you sure you want to delete this campaign?')) return;
            
            try {
                const response = await fetch(`/seo-tools/delete/${campaignId}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Campaign deleted successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
        
        // Auto-refresh every 30 seconds for running campaigns
        <% if (campaigns.filter(c => c.status === 'running').length > 0) { %>
            setTimeout(() => location.reload(), 30000);
        <% } %>
    </script>
</body>
</html>
