<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cron Dashboard - DevTools</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {}
      }
    }
  </script>
</head>
<body class="bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-slate-100 min-h-screen">
  
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside id="sidebar" class="w-64 transition-all duration-300 border-r border-slate-800/50 bg-slate-900/50 backdrop-blur-xl">
      <div class="p-6">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl font-bold">DevTools</h1>
            <p class="text-xs text-slate-400">Multi-tool Platform</p>
          </div>
        </div>

        <nav class="space-y-2">
          <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-violet-500/10 text-violet-400 border border-violet-500/20 hover:bg-violet-500/20 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-medium">Cron Jobs</span>
          </a>
          
          <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-400 hover:bg-slate-800/50 hover:text-slate-100 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
            <span class="font-medium">API Monitor</span>
            <span class="ml-auto text-xs bg-slate-700/50 px-2 py-1 rounded">Soon</span>
          </a>

          <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-400 hover:bg-slate-800/50 hover:text-slate-100 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span class="font-medium">Analytics</span>
            <span class="ml-auto text-xs bg-slate-700/50 px-2 py-1 rounded">Soon</span>
          </a>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <!-- Header -->
      <header class="border-b border-slate-800/50 bg-slate-900/30 backdrop-blur-xl">
        <div class="px-6 py-4 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <button onclick="toggleSidebar()" class="p-2 hover:bg-slate-800/50 rounded-lg transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
            <div>
              <h2 class="text-xl font-semibold">Cron Job Manager</h2>
              <p class="text-sm text-slate-400">Schedule HTTP requests automatically</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="px-3 py-1.5 bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 rounded-full text-sm font-medium">
              <%= cronJobs.length %> Active
            </div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-violet-500 to-purple-600 flex items-center justify-center font-bold">
              <%= user.username.charAt(0).toUpperCase() %>
            </div>
          </div>
        </div>
      </header>

      <!-- Content -->
      <main class="flex-1 overflow-auto p-6">
        <div class="max-w-5xl mx-auto space-y-6">
          
          <!-- Add New Cron Card -->
          <div class="bg-slate-900/50 backdrop-blur-xl border border-slate-800/50 rounded-2xl p-6 shadow-2xl">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-lg bg-violet-500/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold">Add New Cron Job</h3>
            </div>
            
            <form action="/add-cron" method="POST" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Target URL</label>
                <input
                  type="url"
                  name="url"
                  placeholder="https://api.example.com/endpoint"
                  required
                  class="w-full px-4 py-3 bg-slate-950/50 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition-all placeholder:text-slate-500 text-slate-100"
                />
              </div>

              <div>
                <label class="block text-sm font-medium text-slate-300 mb-2">Interval</label>
                <select
                  name="interval"
                  class="w-full px-4 py-3 bg-slate-950/50 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition-all text-slate-100"
                >
                  <option value="*/10 * * * * *">Every 10 seconds</option>
                  <option value="*/30 * * * * *">Every 30 seconds</option>
                  <option value="*/60 * * * * *">Every 60 seconds</option>
                  <option value="*/5 * * * *">Every 5 minutes</option>
                </select>
              </div>

              <button
                type="submit"
                class="w-full px-6 py-3 bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 rounded-lg font-medium transition-all shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 hover:scale-[1.02] active:scale-[0.98]"
              >
                Add Cron Job
              </button>
            </form>
          </div>

          <!-- Cron Jobs List -->
          <div class="bg-slate-900/50 backdrop-blur-xl border border-slate-800/50 rounded-2xl overflow-hidden shadow-2xl">
            <div class="p-6 border-b border-slate-800/50">
              <h3 class="text-lg font-semibold">Active Cron Jobs</h3>
              <p class="text-sm text-slate-400 mt-1">Manage your scheduled tasks</p>
            </div>

            <% if (cronJobs.length > 0) { %>
              <div class="divide-y divide-slate-800/50">
                <% cronJobs.forEach(job => { %>
                  <div class="p-6 hover:bg-slate-800/30 transition-colors group">
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                          <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></div>
                          <span class="text-sm font-mono text-slate-300"><%= job.url %></span>
                        </div>
                        <div class="flex items-center gap-4 text-sm text-slate-400">
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="font-mono"><%= job.interval %></span>
                          </div>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>Running</span>
                          </div>
                        </div>
                      </div>
                      <form action="/stop-cron" method="POST" style="display:inline;">
                        <input type="hidden" name="url" value="<%= job.url %>">
                        <button
                          type="submit"
                          class="p-2 hover:bg-red-500/10 hover:text-red-400 rounded-lg transition-all opacity-0 group-hover:opacity-100"
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        </button>
                      </form>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <div class="p-12 text-center">
                <div class="w-16 h-16 rounded-full bg-slate-800/50 flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <p class="text-slate-400 mb-2">No active cron jobs</p>
                <p class="text-sm text-slate-500">Add your first scheduled task to get started</p>
              </div>
            <% } %>
          </div>

          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gradient-to-br from-violet-500/10 to-purple-600/10 border border-violet-500/20 rounded-xl p-4">
              <div class="text-sm text-violet-300 mb-1">Total Jobs</div>
              <div class="text-3xl font-bold text-violet-100"><%= cronJobs.length %></div>
            </div>
            <div class="bg-gradient-to-br from-emerald-500/10 to-teal-600/10 border border-emerald-500/20 rounded-xl p-4">
              <div class="text-sm text-emerald-300 mb-1">Success Rate</div>
              <div class="text-3xl font-bold text-emerald-100">98.5%</div>
            </div>
            <div class="bg-gradient-to-br from-amber-500/10 to-orange-600/10 border border-amber-500/20 rounded-xl p-4">
              <div class="text-sm text-amber-300 mb-1">Avg Response</div>
              <div class="text-3xl font-bold text-amber-100">142ms</div>
            </div>
          </div>

          <!-- Logout -->
          <form action="/logout" method="POST">
            <button
              type="submit"
              class="w-full px-6 py-3 bg-slate-800/50 hover:bg-slate-800 border border-slate-700 rounded-lg font-medium transition-all text-slate-300 hover:text-slate-100"
            >
              Logout
            </button>
          </form>

        </div>
      </main>
    </div>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('w-64');
      sidebar.classList.toggle('w-0');
    }
  </script>

</body>
</html>