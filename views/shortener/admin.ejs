<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener - Admin Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Courier New', monospace;
      background: linear-gradient(135deg, #000814 0%, #001d3d 100%);
      color: #00d9ff;
      overflow: hidden;
    }

    /* Subtle grid background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        linear-gradient(rgba(0, 217, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 217, 255, 0.03) 1px, transparent 1px);
      background-size: 50px 50px;
      pointer-events: none;
      opacity: 0.5;
    }

    /* Main container */
    .dashboard-container {
      display: flex;
      height: 100vh;
      position: relative;
      z-index: 1;
    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      background: rgba(0, 8, 20, 0.9);
      border-right: 1px solid rgba(0, 217, 255, 0.3);
      display: flex;
      flex-direction: column;
      position: relative;
    }

    /* Sidebar glow effect */
    .sidebar::after {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 1px;
      height: 100%;
      background: linear-gradient(180deg, 
        transparent 0%, 
        rgba(0, 217, 255, 0.5) 50%, 
        transparent 100%);
      animation: sidebarGlow 3s ease-in-out infinite;
    }

    @keyframes sidebarGlow {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 1; }
    }

    /* Logo/Header */
    .sidebar-header {
      padding: 30px 20px;
      border-bottom: 1px solid rgba(0, 217, 255, 0.2);
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 8px;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: rgba(0, 217, 255, 0.1);
      border: 2px solid #00d9ff;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      font-weight: bold;
      box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
    }

    .logo-text {
      font-size: 20px;
      font-weight: bold;
      letter-spacing: 2px;
      text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
    }

    .logo-subtitle {
      font-size: 10px;
      color: rgba(0, 217, 255, 0.6);
      letter-spacing: 1px;
      padding-left: 52px;
    }

    /* Navigation */
    .nav-menu {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .nav-section {
      margin-bottom: 30px;
    }

    .nav-section-title {
      font-size: 11px;
      color: rgba(0, 217, 255, 0.5);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 12px;
      padding-left: 15px;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 15px;
      margin-bottom: 5px;
      color: rgba(0, 217, 255, 0.7);
      text-decoration: none;
      border-radius: 8px;
      border: 1px solid transparent;
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
    }

    .nav-item::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 3px;
      height: 100%;
      background: #00d9ff;
      transform: scaleY(0);
      transition: transform 0.3s;
    }

    .nav-item:hover {
      background: rgba(0, 217, 255, 0.05);
      border-color: rgba(0, 217, 255, 0.3);
      color: #00d9ff;
    }

    .nav-item.active {
      background: rgba(0, 217, 255, 0.1);
      border-color: rgba(0, 217, 255, 0.5);
      color: #00d9ff;
      box-shadow: 0 0 20px rgba(0, 217, 255, 0.2);
    }

    .nav-item.active::before {
      transform: scaleY(1);
    }

    .nav-icon {
      font-size: 18px;
    }

    .nav-badge {
      margin-left: auto;
      background: rgba(0, 217, 255, 0.2);
      color: #00d9ff;
      padding: 2px 8px;
      border-radius: 10px;
      font-size: 10px;
      border: 1px solid rgba(0, 217, 255, 0.3);
    }

    /* User section */
    .sidebar-footer {
      padding: 20px;
      border-top: 1px solid rgba(0, 217, 255, 0.2);
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px;
      background: rgba(0, 217, 255, 0.05);
      border: 1px solid rgba(0, 217, 255, 0.2);
      border-radius: 8px;
    }

    .user-avatar {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #00d9ff, #0891b2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
    }

    .user-details {
      flex: 1;
    }

    .user-name {
      font-size: 14px;
      color: #00d9ff;
      margin-bottom: 2px;
    }

    .user-role {
      font-size: 10px;
      color: rgba(0, 217, 255, 0.6);
    }

    /* Main content */
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    /* Top bar */
    .topbar {
      background: rgba(0, 8, 20, 0.8);
      border-bottom: 1px solid rgba(0, 217, 255, 0.3);
      padding: 20px 30px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .page-title {
      font-size: 24px;
      color: #00d9ff;
      text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
    }

    .page-subtitle {
      font-size: 12px;
      color: rgba(0, 217, 255, 0.6);
      margin-top: 4px;
    }

    .topbar-actions {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .system-time {
      padding: 8px 15px;
      background: rgba(0, 217, 255, 0.05);
      border: 1px solid rgba(0, 217, 255, 0.2);
      border-radius: 6px;
      font-size: 12px;
    }

    /* Content area */
    .content-area {
      flex: 1;
      overflow-y: auto;
      padding: 30px;
    }

    /* Custom scrollbar */
    .content-area::-webkit-scrollbar {
      width: 8px;
    }

    .content-area::-webkit-scrollbar-track {
      background: rgba(0, 217, 255, 0.05);
    }

    .content-area::-webkit-scrollbar-thumb {
      background: rgba(0, 217, 255, 0.3);
      border-radius: 4px;
    }

    .content-area::-webkit-scrollbar-thumb:hover {
      background: rgba(0, 217, 255, 0.5);
    }

    /* Cards */
    .card {
      background: rgba(0, 8, 20, 0.6);
      border: 1px solid rgba(0, 217, 255, 0.3);
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      position: relative;
      overflow: hidden;
    }

    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, #00d9ff, transparent);
      opacity: 0.5;
    }

    .card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .card-title {
      font-size: 18px;
      color: #00d9ff;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .card-title::before {
      content: '▸';
      color: #00d9ff;
      font-size: 20px;
    }

    /* Stats cards */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: rgba(0, 8, 20, 0.6);
      border: 1px solid rgba(0, 217, 255, 0.3);
      border-radius: 12px;
      padding: 20px;
      position: relative;
      overflow: hidden;
    }

    .stat-card::after {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 50%;
      height: 100%;
      background: radial-gradient(circle at top right, rgba(0, 217, 255, 0.1), transparent);
      pointer-events: none;
    }

    .stat-label {
      font-size: 11px;
      color: rgba(0, 217, 255, 0.6);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: 32px;
      color: #00d9ff;
      font-weight: bold;
      text-shadow: 0 0 20px rgba(0, 217, 255, 0.5);
    }

    .stat-icon {
      position: absolute;
      top: 20px;
      right: 20px;
      font-size: 40px;
      opacity: 0.2;
    }

    /* Filter buttons */
    .filter-buttons {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .filter-btn {
      padding: 8px 16px;
      border: 1px solid rgba(0, 217, 255, 0.3);
      background: transparent;
      color: rgba(0, 217, 255, 0.7);
      font-family: 'Courier New', monospace;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .filter-btn:hover {
      background: rgba(0, 217, 255, 0.1);
      border-color: rgba(0, 217, 255, 0.5);
      color: #00d9ff;
    }

    .filter-btn.active {
      background: rgba(0, 217, 255, 0.1);
      border-color: #00d9ff;
      color: #00d9ff;
    }

    /* Table */
    .links-table {
      width: 100%;
      border-collapse: collapse;
    }

    .links-table thead tr {
      border-bottom: 2px solid rgba(0, 217, 255, 0.3);
    }

    .links-table th {
      text-align: left;
      padding: 15px;
      font-size: 12px;
      color: rgba(0, 217, 255, 0.8);
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: normal;
    }

    .links-table td {
      padding: 15px;
      border-bottom: 1px solid rgba(0, 217, 255, 0.1);
      color: rgba(0, 217, 255, 0.9);
    }

    .links-table tbody tr {
      transition: all 0.3s;
    }

    .links-table tbody tr:hover {
      background: rgba(0, 217, 255, 0.05);
    }

    .status-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 11px;
      border: 1px solid;
    }

    .status-safe {
      background: rgba(0, 255, 0, 0.1);
      border-color: rgba(0, 255, 0, 0.3);
      color: #00ff00;
    }

    .status-blocked {
      background: rgba(255, 0, 0, 0.1);
      border-color: rgba(255, 0, 0, 0.3);
      color: #ff0000;
    }

    .url-text {
      font-family: 'Courier New', monospace;
      color: rgba(0, 217, 255, 0.7);
      font-size: 13px;
      max-width: 300px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .short-code {
      font-family: 'Courier New', monospace;
      color: #00d9ff;
      font-weight: bold;
      background: rgba(0, 217, 255, 0.1);
      padding: 2px 8px;
      border-radius: 4px;
    }

    /* Buttons */
    .btn {
      padding: 8px 15px;
      border: 1px solid #00d9ff;
      background: transparent;
      color: #00d9ff;
      font-family: 'Courier New', monospace;
      font-size: 11px;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.3s;
      margin-right: 5px;
    }

    .btn:hover {
      background: rgba(0, 217, 255, 0.1);
      box-shadow: 0 0 10px rgba(0, 217, 255, 0.3);
    }

    .btn-danger {
      border-color: #ff4444;
      color: #ff4444;
    }

    .btn-danger:hover {
      background: rgba(255, 68, 68, 0.1);
      box-shadow: 0 0 10px rgba(255, 68, 68, 0.3);
    }

    .btn-success {
      border-color: #00ff00;
      color: #00ff00;
    }

    .btn-success:hover {
      background: rgba(0, 255, 0, 0.1);
      box-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
    }

    /* Action buttons */
    .action-buttons {
      display: flex;
      gap: 5px;
    }

    /* Empty state */
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: rgba(0, 217, 255, 0.5);
    }

    .empty-icon {
      font-size: 48px;
      margin-bottom: 15px;
      opacity: 0.3;
    }

    /* Loading spinner */
    .loading {
      display: inline-block;
      width: 12px;
      height: 12px;
      border: 2px solid rgba(0, 217, 255, 0.3);
      border-radius: 50%;
      border-top-color: #00d9ff;
      animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Modal styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
    }

    .modal-content {
      background: rgba(0, 8, 20, 0.95);
      border: 1px solid rgba(0, 217, 255, 0.3);
      border-radius: 12px;
      margin: 15% auto;
      padding: 20px;
      width: 400px;
      position: relative;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .modal-title {
      color: #00d9ff;
      font-size: 18px;
    }

    .close {
      color: rgba(0, 217, 255, 0.7);
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }

    .close:hover {
      color: #00d9ff;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-label {
      display: block;
      margin-bottom: 5px;
      color: rgba(0, 217, 255, 0.8);
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .form-input {
      width: 100%;
      padding: 10px;
      background: rgba(0, 20, 30, 0.6);
      border: 1px solid rgba(0, 217, 255, 0.3);
      color: #00d9ff;
      border-radius: 6px;
      font-family: 'Courier New', monospace;
    }

    .form-input:focus {
      outline: none;
      border-color: #00d9ff;
      box-shadow: 0 0 10px rgba(0, 217, 255, 0.3);
    }

    .modal-actions {
      display: flex;
      gap: 10px;
      justify-content: flex-end;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <div class="logo-icon">LP</div>
          <div class="logo-text">LASTPIECE</div>
        </div>
        <div class="logo-subtitle">TEAM TOOLS PLATFORM</div>
      </div>

      <nav class="nav-menu">
        <div class="nav-section">
          <div class="nav-section-title">Tools</div>
          <a href="/dashboard" class="nav-item">
            <span class="nav-icon">⏰</span>
            <span>Cron Jobs</span>
          </a>
          <a href="/shortener" class="nav-item">
            <span class="nav-icon">🔗</span>
            <span>URL Shortener</span>
          </a>
          <a href="/shortener/admin" class="nav-item active">
            <span class="nav-icon">📊</span>
            <span>Admin Dashboard</span>
          </a>
        </div>
      </nav>

      <div class="sidebar-footer">
        <div class="user-info">
          <div class="user-avatar"><%= user.username.charAt(0).toUpperCase() %></div>
          <div class="user-details">
            <div class="user-name"><%= user.username %></div>
            <div class="user-role">Administrator</div>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Topbar -->
      <div class="topbar">
        <div>
          <div class="page-title">📊 URL SHORTENER ADMIN</div>
          <div class="page-subtitle">Manage and monitor short links</div>
        </div>
        <div class="topbar-actions">
          <div class="system-time" id="systemTime">00:00:00</div>
          <form action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Logout</button>
          </form>
        </div>
      </div>

      <!-- Content -->
      <div class="content-area">
        <!-- Stats -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-label">Total Links</div>
            <div class="stat-value"><%= stats.total %></div>
            <div class="stat-icon">🔗</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">Safe Links</div>
            <div class="stat-value"><%= stats.safe %></div>
            <div class="stat-icon">✅</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">Blocked Links</div>
            <div class="stat-value"><%= stats.blocked %></div>
            <div class="stat-icon">🚫</div>
          </div>
          <div class="stat-card">
            <div class="stat-label">Total Clicks</div>
            <div class="stat-value"><%= stats.totalClicks %></div>
            <div class="stat-icon">👆</div>
          </div>
        </div>

        <!-- Filter and Actions -->
        <div class="card">
          <div class="card-header">
            <div class="card-title">Link Management</div>
          </div>
          
          <div class="filter-buttons">
            <a href="?status=all" class="filter-btn <%= currentFilter === 'all' ? 'active' : '' %>">All Links</a>
            <a href="?status=safe" class="filter-btn <%= currentFilter === 'safe' ? 'active' : '' %>">Safe Only</a>
            <a href="?status=blocked" class="filter-btn <%= currentFilter === 'blocked' ? 'active' : '' %>">Blocked Only</a>
            <button onclick="recheckAllLinks()" class="btn btn-success">Recheck All</button>
          </div>
        </div>

        <!-- Links Table -->
        <div class="card">
          <div class="card-header">
            <div class="card-title">Short Links</div>
          </div>

          <% if (links.length > 0) { %>
            <table class="links-table">
              <thead>
                <tr>
                  <th>Short Code</th>
                  <th>Destination URL</th>
                  <th>Status</th>
                  <th>Last Checked</th>
                  <th>Clicks</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% links.forEach(link => { %>
                  <tr>
                    <td>
                      <span class="short-code"><%= link.shortCode %></span>
                    </td>
                    <td>
                      <div class="url-text" title="<%= link.destinationUrl %>">
                        <%= link.destinationUrl %>
                      </div>
                    </td>
                    <td>
                      <span class="status-badge <%= link.checkStatus === 'safe' ? 'status-safe' : 'status-blocked' %>">
                        <%= link.checkStatus === 'safe' ? 'Safe 🟢' : 'Blocked 🔴' %>
                      </span>
                    </td>
                    <td>
                      <%= new Date(link.lastCheckedAt).toLocaleString() %>
                    </td>
                    <td><%= link.clickCount %></td>
                    <td>
                      <div class="action-buttons">
                        <button onclick="recheckLink('<%= link.id %>')" class="btn btn-success" id="recheck-<%= link.id %>">
                          Check
                        </button>
                        <button onclick="editLink('<%= link.id %>', '<%= link.destinationUrl %>')" class="btn">
                          Edit
                        </button>
                        <button onclick="deleteLink('<%= link.id %>')" class="btn btn-danger">
                          Delete
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <div class="empty-state">
              <div class="empty-icon">🔗</div>
              <p>No links found</p>
              <p>Create your first short link to get started</p>
            </div>
          <% } %>
        </div>

      </div>
    </main>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">Edit Link</div>
        <span class="close" onclick="closeModal()">&times;</span>
      </div>
      <form id="editForm">
        <input type="hidden" id="editLinkId" />
        <div class="form-group">
          <label class="form-label">Destination URL</label>
          <input type="url" id="editUrl" class="form-input" required />
        </div>
        <div class="modal-actions">
          <button type="button" onclick="closeModal()" class="btn">Cancel</button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Update system time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toTimeString().split(' ')[0];
      document.getElementById('systemTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 1000);

    // Recheck single link
    async function recheckLink(linkId) {
      const button = document.getElementById(`recheck-${linkId}`);
      const originalText = button.textContent;
      
      button.innerHTML = '<span class="loading"></span> Checking...';
      button.disabled = true;
      
      try {
        const response = await fetch(`/shortener/check/${linkId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Reload page to show updated status
          location.reload();
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        alert('Error: ' + error.message);
      } finally {
        button.textContent = originalText;
        button.disabled = false;
      }
    }

    // Recheck all links
    async function recheckAllLinks() {
      if (!confirm('Recheck all links? This may take a while.')) {
        return;
      }
      
      try {
        const response = await fetch('/shortener/recheck-all', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const result = await response.json();
        
        if (result.success) {
          alert(`Successfully rechecked ${result.links.length} links`);
          location.reload();
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    // Edit link
    function editLink(linkId, currentUrl) {
      document.getElementById('editLinkId').value = linkId;
      document.getElementById('editUrl').value = currentUrl;
      document.getElementById('editModal').style.display = 'block';
    }

    // Close modal
    function closeModal() {
      document.getElementById('editModal').style.display = 'none';
    }

    // Handle edit form submission
    document.getElementById('editForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const linkId = document.getElementById('editLinkId').value;
      const newUrl = document.getElementById('editUrl').value;
      
      try {
        const response = await fetch(`/shortener/update/${linkId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ destinationUrl: newUrl })
        });
        
        const result = await response.json();
        
        if (result.success) {
          closeModal();
          location.reload();
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    });

    // Delete link
    async function deleteLink(linkId) {
      if (!confirm('Are you sure you want to delete this link?')) {
        return;
      }
      
      try {
        const response = await fetch(`/shortener/delete/${linkId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const result = await response.json();
        
        if (result.success) {
          location.reload();
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('editModal');
      if (event.target === modal) {
        closeModal();
      }
    }
  </script>

